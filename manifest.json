{
    "manifest_version": 3,
    "name": "Simple Auto Refresh",
    "version": "1.0",
    "description": "Automatically refreshes the current tab based on user-defined interval.",
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "permissions": [
        "activeTab",
        "storage"
    ]
}
